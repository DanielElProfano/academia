
<head>
    <title>{{ title }}</title>
</head>

<body>
    <div>
        <a href="/">Ir a Inicio</a>
    </div>

    <h1>
        Hire a professor
    </h1>
    <form method="POST" action="/professor/create" enctype="multipart/form-data">
        <label>
            <span>Name: </span>
            <input name="name" type="text">
        </label>
        <label>
            <span>Lastname</span>
            <input name="lastName" type="text">
        </label>
            <div>
        <label>
            <span>Image</span>
            <input name="photo" type="file" accept="image/png, image/jpg, image/jpeg">
        </label>
        <label>
            <span>Mail</span>
            <input name="mail" type="text">
        </label>
        <label>
            <span>Subjects</span>
            <select name="education" multiple>
                <option value="React">
                    React
                </option>
                <option value="Vanilla JS">
                    Vanilla JS
                </option>
                <option value="Node">
                    Node
                </option>
                 <option value="Angular">
                    Angular
                </option>
            </select>
        </label>

        <label>
            <span>Age</span>
            <input name="age" type="text">
        </label>
         <label>
            <span>Password</span>
            <input name="password" type="password">
        </label>

        
        <button type="submit">
            Create
        </button>
    </form>
    {{#if error}}    
        <p style="color: red;">{{error}}</p>
    {{/if}}

</body>

</html>